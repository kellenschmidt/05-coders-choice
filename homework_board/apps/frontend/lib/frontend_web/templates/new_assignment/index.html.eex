<h1>Create new assignments</h1>

<%= form_for @changeset, new_assignment_path(@conn, :create), fn f -> %>
  <label>
    Title: <%= text_input f, :title %>
  </label>

  <label>
    Description: <%= textarea f, :description %>
  </label>

  <label>
    Priority: <%= select f, :priority, 0..10 %>
  </label>

  <%= submit "Submit" %>
<% end %>

<%= button("Assignment List", to: "/list", method: "get", class: "btn btn-success") %>
